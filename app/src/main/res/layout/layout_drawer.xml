<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search"
        android:background="@drawable/drawer_edit_box_bkg"
        android:gravity="center"
        android:hint="搜索 App 功能"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/txt_empty_result"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="@color/black20"
        android:text="暂无搜索结果"
        android:gravity="center"/>

    <com.kongzue.dialogxsampledemo.function.searchdemo.SearchListView
        android:id="@+id/list_search_result"
        android:layout_width="match_parent"
        android:dividerHeight="1px"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

</LinearLayout>